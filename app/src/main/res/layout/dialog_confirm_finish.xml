<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish Test"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:textAlignment="center"
        android:layout_marginBottom="8dp" />

    <!-- Dialog Description -->
    <TextView
        android:id="@+id/tv_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to finish the test?\n\nOnce submitted, you cannot make any changes to your answers."
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"
        android:lineSpacingExtra="4dp" />

    <!-- Dialog Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel_finish"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Continue Test"
            android:textColor="?attr/colorOnSurfaceVariant"
            style="@style/Widget.Material3.Button.TextButton"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_finish"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Finish Test"
            android:textColor="?attr/colorOnPrimary"
            app:backgroundTint="?attr/colorPrimary"
            app:cornerRadius="8dp" />

    </LinearLayout>

</LinearLayout>
