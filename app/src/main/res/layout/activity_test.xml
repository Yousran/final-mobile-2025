<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/android:colorBackground"
    tools:context=".TestActivity">

    <!-- Test Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_test"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Test Title -->
            <TextView
                android:id="@+id/tv_test_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test multiple select"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:textAlignment="center"
                android:layout_marginBottom="24dp" />

            <!-- Test Info Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Time Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_time"
                        android:layout_marginBottom="8dp"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tv_test_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 minutes"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

                <!-- Questions Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_list"
                        android:layout_marginBottom="8dp"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tv_question_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Questions"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

                <!-- Participants Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_people"
                        android:layout_marginBottom="8dp"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tv_participant_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 Participants"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </LinearLayout>

            <!-- Start Test Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_test"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Start Test"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                app:backgroundTint="?attr/colorSurfaceVariant"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
